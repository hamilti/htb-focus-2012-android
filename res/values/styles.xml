<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ListItem">
        <item name="android:padding">10dp</item>
    </style>
    <style name="ListItemTitle" parent="android:Widget.TextView">
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListItemSubTitle" parent="android:Widget.TextView">
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ListItemSpeaker" parent="android:Widget.TextView">
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ListItemTime" parent="android:Widget.TextView">
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="ListItemImage">
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="NoListData" parent="android:Widget.TextView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ListItemMoreTitle" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="sectionHeader" parent="android:Widget.TextView">
        <item name="android:padding">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/section_header</item>
        <item name="android:textStyle">bold</item>
    </style>        
    <style name="PagerText" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>        
    </style>
    <style name="HTMLListItemText" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="share_button" parent="android:Widget.Button">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="event_book_button" parent="android:Widget.Button">
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="event_text" parent="android:Widget.TextView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="pager">
        <item name="android:orientation">horizontal</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="pager_seperator_line">
        <item name="android:background">#cccccc</item>
    </style>
  <style name="ActionBar" parent="Widget.Sherlock.Light.ActionBar">
    <item name="android:background">@drawable/actionbar_background</item>
    <item name="background">@drawable/actionbar_background</item>
    <item name="android:titleTextStyle">@style/actionbar_title_style</item>
    <item name="titleTextStyle">@style/actionbar_title_style</item>
  </style>
  <style name="actionbar_title_style" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
      <item name="android:textColor">#ffffff</item>
  </style>
  <style name="AlphaTheme" parent="@style/Theme.Sherlock">
    <item name="android:actionBarStyle">@style/ActionBar</item>
    <item name="actionBarStyle">@style/ActionBar</item>
  </style>     
</resources>
